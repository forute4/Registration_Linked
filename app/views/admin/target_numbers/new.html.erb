<div class = "container mt-4">
  <div class="row">
    <h1>目標数値設定</h1>
  </div>
  <div class="row">
    <p><%= link_to "目標一覧に戻る", admin_target_numbers_path %></p>
  </div>

  <%= form_with model: @target, url: admin_target_numbers_path, method: :post do |f| %>
    <div class = "row mt-3">
      <div class = "col-lg-2"></div>
        <p>目標区間名</p>
        <div class = "col-lg-4">
        <%= f.text_field :target_name, required: true %>
      </div>
    </div>

    <div class = "row mt-3" >
      <div class = "col-lg-2"></div>
      <h4>目標期間</h4>
    </div>
    
    <div class = "row">
      <div class = "col-lg-3"></div>
      <div class = "col-lg-3">
      <p>開始日</p>
      <%= f.date_select :start_day %>
      </div>
      <div class = "col-lg-3">
      <p>終了日</p>
      <%= f.date_select :finish_day %>
      </div>
    </div>


    <div class = "row mt-5">
      <div class = "col-lg-2"></div>
    <h4>目標数値</h4>
    </div>
    
    <div class ="row mt-3">
      <div class = "col-lg-3"></div>
      <div class = "col-lg-3">
        <p>目標申込数</p>
        <%= f.text_field :subscription_number, required: true %>件
      </div>
      <div class = "col-lg-3">
        <p>目標入塾数</p>
        <%= f.text_field :continue_number, required: true %>件
      </div>
    </div>

    <div class = "row mt-4">
      <div class = "col-lg-5"></div>
      <%= f.submit "目標数値登録", class:"btn btn-primary" %>
    </div>
  <% end %>
</div>