<div class = "container mt-4">
  <h1>目標数値設定</h1>
  <p><%= link_to "詳細画面に戻る", admin_target_number_path %></p>
  <%= form_with model: @target, url: admin_target_number_path(@target), method: :patch do |f| %>
    <div class = "row mt-3">
      <div class = "col-lg-2"></div>
        <h4>目標区間名</h4>
      <div class = "col-lg-4">
        <%= f.text_field :target_name, required: true %>
      </div>
    </div>
  
    <div class = "row mt-3" >
      <div class = "col-lg-2"></div>
      <h4>目標期間</h4>
    </div>
    
    <div class = "row">
      <div class = "col-lg-3"></div>
      <div class = "col-lg-3">
        <p>開始日</p>
        <%= f.date_select :start_day %>
      </div>
      <div class = "col-lg-3">
        <p>終了日</p>
        <%= f.date_select :finish_day %>
      </div>
    </div>
  
    <div class = "row mt-5">
      <div class = "col-lg-2"></div>
      <h4>目標数値</h4>
    </div>
    <div class ="row mt-3">
      <div class = "col-lg-3"></div>
      <div class = "col-lg-3">
        <p>目標申込数</p>
        <%= f.text_field :subscription_number, required: true %>
      </div>
      <div class = "col-lg-3">
        <p>目標入塾数</p>
        <%= f.text_field :continue_number, required: true %>
      </div>
    </div>
  
    <div class = "row mt-4">
      <div class="col-lg-5"></div>
      <div class="col-lg-1 text-center">
        <%= f.submit "更新", class:"btn btn-success" %>
      </div>
    </div>
  <% end %>
</div>