<div class>

  <h2>生徒一覧</h2>

  <%= form_tag admin_students_path, method: :get do %>
    <label for="grade">学年:</label>
    <%= select_tag 'grade', options_for_select(Student.grades_i18n.invert, @selected_grade), include_blank: true %>
    <%= submit_tag '絞り込み' %>
  <% end %>

  <table class>
    <tr>
      <th>学年</th>
      <th>生徒ID</th>
      <th>生徒名</th>
      <th>生徒区分</th>
      <th>生徒状況</th>
    </tr>
    <% @selected_students.each do |student| %>
      <tr>
        <td><%= student.grade_i18n %></td>
        <td><%= link_to student.id, admin_student_path(student.id) %></td>
        <td><%= link_to student.full_name, admin_student_path(student.id) %></td>
        <td><%= student.student_status_i18n %></td>
        <td><%= student.situation_status %></td>
      </tr>
    <% end %>
  </table>
</div>