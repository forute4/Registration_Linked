<div class="container mt-4">
  <h2>生徒検索結果</h2>
  
  <% if @students.blank? %>
    <p class="no-results text-center">検索結果はありません。</p>
  <% else %>
    <table class="table">
    <tr>
      <th style= "background-color: #dee2e6; text-align: center;">学年</th>
      <th style= "background-color: #dee2e6; text-align: center;">生徒ID</th>
      <th style= "background-color: #dee2e6; text-align: center;">生徒名</th>
      <th style= "background-color: #dee2e6; text-align: center;">生徒区分</th>
      <th style= "background-color: #dee2e6; text-align: center;">生徒状況</th>
    </tr>
    <% @students.each do |student| %>
      <tr>
        <td class="text-center"><%= student.grade_i18n %></td>
        <td class="text-center"><%= link_to student.id, admin_student_path(student.id) %></td>
        <td class="text-center"><%= link_to student.full_name, admin_student_path(student.id) %></td>
        <td class="text-center"><%= student.student_status_i18n %></td>
        <td class="text-center"><%= student.situation_status %></td>
      </tr>
    <% end %>
  </table>
  <% end %>
</div>
