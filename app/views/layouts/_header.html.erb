<header>
  <% if admin_signed_in? %>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
      <ul class="navbar-nav">
      <li class="nav-item">
        <%= link_to admin_path, class: 'nav-link text-left' do %>
          <i class="fa-solid fa-house" style="color: #74C0FC;"></i> HOME
        <% end %>
      </li>
    </ul>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">

          <li>
            <%= link_to admin_subscriptions_path,class: 'nav-link text-light' do %>
              <i class="fa-solid fa-users-viewfinder" style="color: #74C0FC;"></i> 体験生一覧
            <% end %>
          </li>
          <li>
            <%= link_to admin_students_path, class: 'nav-link text-light' do %>
              <i class="fa-solid fa-users-rectangle" style="color: #74C0FC;"></i> 生徒一覧
            <% end %>
          </li>
          <li>
            <%= form_with url: admin_search_path, local: true, method: :get do |f| %>
              <%= f.text_field :keyword %>
              <%= f.submit "検索" %>
            <% end %>
          </li>
          <li>
            <%= link_to destroy_admin_session_path, method: :delete, class: 'nav-link text-light' do%>
              <i class="fa-solid fa-right-from-bracket"></i>ログアウト
            <% end %>
          </li>

        </ul>
      </div>
    </div>
  </nav>
  <% end %>
</header>


